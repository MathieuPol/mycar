{% extends 'base.html.twig' %}

{% block title %}Modification de modèle{% endblock %}

        {% block style %}
        {{ asset('css/styleBack.css') }}
        {% endblock %}



{% block body %}

{% include '/back/partials/_nav_back.html.twig' %}

            <div id="layoutSidenav_content">
                <main>



		<h2 class="text-center">Voici un apperçu de vos utilisateurs</h2>


		<table class="table">
			<thead class="thead-dark">
				<tr>
                <th scope="col" >Id</th>
                <th scope="col" >Email</th>
                <th scope="col" >Roles</th>
                <th scope="col" >actions</th>
				</tr>
			</thead>
			<tbody>

        {% for user in users %}
            <tr class="align-middle">
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a type="button" class="btn btn-primary me-2" href="{{ path('app_back_user_show', {'id': user.id}) }}">Voir</a>
                </td>
                <td>
                    <a type="button" class="btn btn-warning me-2" href="{{ path('app_back_user_edit', {'id': user.id}) }}">Editer un utilisateur</a>
                </td>
                <td>
                {% include "back/user/_delete_form.html.twig" %}

						
				</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-success me-2" href="{{ path('app_back_user_new') }}">Créer un nouvel utilisateur</a>



                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Réalisé par Poltorak Mathieu</div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

        <script src="{{ asset('js/script.js') }}"></script>

{% endblock %}

