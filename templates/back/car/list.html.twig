{% extends 'base.html.twig' %}

{% block title %}Modification de modèle{% endblock %}

        {% block style %}
        {{ asset('css/styleBack.css') }}
        {% endblock %}



{% block body %}

{% include '/back/partials/_nav_back.html.twig' %}

            <div id="layoutSidenav_content">
                <main>



		<h2 class="text-center">Voici un apperçu de vos modeles</h2>


		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Modele</th>
					<th scope="col">Date de sortie</th>
					<th scope="col">Marque</th>
					<th scope="col">Type</th>
					<th scope="col">Elle te plait pas?<br> Supprime la!</th>
					<th scope="col">Tu pourrais la modifier au lieu de la supprimer!!</th>
				</tr>
			</thead>
			<tbody>

				{% for car in carList %}

					<tr class="align-middle">
						<th scope="row">{{ car.id }}</th>
						<td>{{ car.modele }}</td>
						<td>{{ car.releaseDate|date ("m/d/Y") }}</td>
						<td><a href="{{ path('carBrand', {id: car.brand.id}) }}">{{ car.brand.name }}</a></td>
						<td>{{ car.fuel }}</td>


						<td>
                                    <form action="{{ path('carDelete', {id: car.id}) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
 										<button type="submit" onclick="window.location.href= '{{ path('carDelete', {id: car.id}) }}'" type="button" class="btn btn-danger me-2">Supprimer un véhicule</button>
                                    </form>
						
						</td>
						<td>
						 	<button type="submit" onclick="window.location.href= '{{ path('carUpdate', {id: car.id}) }}'" type="button" class="btn btn-primary me-2">Modifier un véhicule</button>

						</td>
					</tr>
				{% endfor %}


			</tbody>
		</table>





                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Réalisé par Poltorak Mathieu</div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

        <script src="{{ asset('js/script.js') }}"></script>

{% endblock %}